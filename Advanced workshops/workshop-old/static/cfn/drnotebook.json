{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "NotebookName": {
            "Type": "String",
            "Description": "Enter a name for your Notebook."
        },
        "DeepRacerS3BucketName": {
            "Type": "String"
        }
    },
    "Resources": {
        "BasicNotebookInstance": {
            "Type": "AWS::SageMaker::NotebookInstance",
            "Properties": {
                "InstanceType": "ml.t2.medium",
                "LifecycleConfigName": { "Fn::GetAtt" : [ "BasicNotebookInstanceLifecycleConfig", "NotebookInstanceLifecycleConfigName" ] },
                "NotebookInstanceName": {
                    "Ref": "NotebookName"
                },
                "RoleArn": {
                    "Fn::GetAtt": [
                        "ExecutionRole",
                        "Arn"
                    ]
                },
                "VolumeSizeInGB" : 25
            }
        },  
        "BasicNotebookInstanceLifecycleConfig": {
            "Type": "AWS::SageMaker::NotebookInstanceLifecycleConfig",
            "Properties": {
              "OnCreate": [
                {
                  "Content": {
                    "Fn::Base64": "mkdir -p -m7777 './home/ec2-user/SageMaker/DeepRacer_400_Workshop/' && aws s3 cp s3://deepracer-managed-resources-us-east-1/deepracer-simapp.tar.gz './home/ec2-user/SageMaker/DeepRacer_400_Workshop/' && cp -r /home/ec2-user/sample-notebooks/reinforcement_learning/rl_deepracer_robomaker_coach_gazebo/* './home/ec2-user/SageMaker/DeepRacer_400_Workshop/' && rm -f './home/ec2-user/SageMaker/DeepRacer_400_Workshop/deepracer_rl.ipynb' && chmod -R 7777 '/home/ec2-user/SageMaker/DeepRacer_400_Workshop' && aws s3 cp s3://public-mcfeenea-sm-nb/400_deepracer_rl.ipynb './home/ec2-user/SageMaker/DeepRacer_400_Workshop/' && aws s3 cp s3://public-mcfeenea-sm-nb/stop.png './home/ec2-user/SageMaker/DeepRacer_400_Workshop/' && aws s3 cp s3://public-mcfeenea-sm-nb/go.png './home/ec2-user/SageMaker/DeepRacer_400_Workshop/' && aws s3 cp s3://public-mcfeenea-sm-nb/wait.png './home/ec2-user/SageMaker/DeepRacer_400_Workshop/'"
                  }
                }
              ]
            }
          },
    
    "ExecutionRole": {
        "Type": "AWS::IAM::Role",
        "Properties": {
            "AssumeRolePolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                    {
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "sagemaker.amazonaws.com",
                                "robomaker.amazonaws.com"
                            ]
                        },
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }
                ]
            },
            "Path": "/",
            "Policies": [
                {
                    "PolicyName": "root",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [
                            {
                                "Effect": "Allow",
                                "Action": "*",
                                "Resource": "*"
                            }
                        ]
                    }
                    
                }
            ]
        }
    },
        "AwsDeepRacerBucket": {
            "Type": "AWS::S3::Bucket",
            "DeletionPolicy": "Retain",
            "Properties": {
                "BucketName": {
                    "Ref": "DeepRacerS3BucketName"
                }
            }
        },
        "VPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "10.0.0.0/16",
                "EnableDnsSupport": true,
                "EnableDnsHostnames": true,
                "InstanceTenancy": "default",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "deepracer-vpc-notebook"
                    }
                ]
            }
        },
        "InternetGateway": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {}
        },
        "EC2VPCG3B58J": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "InternetGatewayId": {
                    "Ref": "InternetGateway"
                },
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },
        "EC2SRTA4CTQ": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet1"
                }
            }
        },
        "PublicSubnet1": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "us-west-2a",
                "CidrBlock": "10.0.0.0/24",
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },
        "PublicSubnet2": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "us-west-2b",
                "CidrBlock": "10.0.1.0/24",
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },
        "PublicSubnet3": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "us-west-2c",
                "CidrBlock": "10.0.2.0/24",
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },
        "PublicSubnet4": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "us-west-2d",
                "CidrBlock": "10.0.3.0/24",
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },
        "S3Endpoint": {
            "Type": "AWS::EC2::VPCEndpoint",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "RouteTableIds": [
                    {
                        "Ref": "PublicRouteTable"
                    }
                ],
                "ServiceName": {
                    "Fn::Join": [
                        "",
                        [
                            "com.amazonaws.",
                            {
                                "Ref": "AWS::Region"
                            },
                            ".s3"
                        ]
                    ]
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": "*",
                            "Action": [
                                "s3:*"
                            ],
                            "Resource": [
                                "*"
                            ]
                        }
                    ]
                }
            }
        },
        "PublicRoute": {
            "Type": "AWS::EC2::Route",
            "DependsOn": [
                "EC2VPCG3B58J"
            ],
            "Properties": {
                "DestinationCidrBlock": "0.0.0.0/0",
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                },
                "GatewayId": {
                    "Ref": "InternetGateway"
                }
            }
        },
        "PublicRouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },
        "EC2SNAA1X79W": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "NetworkAcl"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet1"
                }
            }
        },
        "NetworkAcl": {
            "Type": "AWS::EC2::NetworkAcl",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                }
            }
        },
        "EC2SNAA2R0VV": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "NetworkAcl"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet1"
                }
            }
        },
        "NetworkAclEntryEgress": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "NetworkAcl"
                },
                "CidrBlock": "0.0.0.0/0",
                "Egress": true,
                "Protocol": -1,
                "RuleAction": "allow",
                "RuleNumber": 100
            }
        },
        "NetworkAclEntryIngress": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "NetworkAcl"
                },
                "CidrBlock": "0.0.0.0/0",
                "Egress": false,
                "Protocol": -1,
                "RuleAction": "allow",
                "RuleNumber": 100
            }
        },
        "SecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "400 Level DeepRacer Workshop VPC security group",
                "GroupName": "deepracer-vpc-4323-341",
                "VpcId": {
                    "Ref": "VPC"
                },
                "SecurityGroupEgress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "IpProtocol": -1
                    }
                ]
            }
        },
        "SecurityGroupIngress": {
            "Type": "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId": {
                    "Ref": "SecurityGroup"
                },
                "SourceSecurityGroupId": {
                    "Ref": "SecurityGroup"
                },
                "IpProtocol": -1
            }
        },
        "EC2SRTA1VQTL": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet3"
                }
            }
        },
        "EC2SNAA2RVZI": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "NetworkAcl"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet3"
                }
            }
        },
        "EC2SNAA2A453": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "NetworkAcl"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet4"
                }
            }
        },
        "EC2SRTAJF2Q": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet4"
                }
            }
        },
        "EC2SRTAD0XQ": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet2"
                }
            }
        },
        "EC2SNAA48BE8": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "NetworkAcl"
                },
                "SubnetId": {
                    "Ref": "PublicSubnet2"
                }
            }
        }},
        "Outputs": {
            "S3BucketName": {
                "Value": {
                    "Ref": "DeepRacerS3BucketName"
                }
            },
            "PublicSubnet1": {
                "Value": {
                    "Ref": "PublicSubnet1"
                }
            },
            "PublicSubnet2": {
                "Value": {
                    "Ref": "PublicSubnet2"
                }
            },
            "PublicSubnet3": {
                "Value": {
                    "Ref": "PublicSubnet3"
                }
            },
            "PublicSubnet4": {
                "Value": {
                    "Ref": "PublicSubnet4"
                }
            },
            "SecurityGroup": {
                "Value": {
                    "Ref": "SecurityGroup"
                }
            },
            "VpcId": {
                "Value": {
                    "Ref": "VPC"
                }
            }
        }
    }


